{% extends 'table.html.twig' %}

{% block title %}Planning{% endblock %}
{% block tablename %}Vue Planning{% endblock %}

{% block button %}
<a href="{{ path('app_planning_index') }}" class="btn btn-dark btn-sm" >Retour</a>
<a href="{{ path('app_planning_edit', {'id': planning.id}) }}" class="btn btn-secondary btn-sm ml-3" >Modifier</a>
{% endblock %}


{% block table %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planning.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ planning.date ? planning.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_debut</th>
                <td>{{ planning.heureDebut ? planning.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ planning.heureFin ? planning.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>
                    {{ include('planning/_delete_form.html.twig') }}
                </th>
            </tr>
        </tbody>
    </table>
    
{% endblock %}
