{{ form_start(form) }}
      {# {{ form_widget(form) }} #}
        <div class="card-body">
            
            <div class="row mb-5">
                <div class="col-4">
                    <label>Nom</label>   
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                        {{ form_widget(form.nom)}}
                        {{ form_errors(form.nom)}}
                    </div>
                </div>
                <div class="col-4">
                    <label>Prenom</label>
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                        {{ form_widget(form.prenom)}}
                        {{ form_errors(form.prenom)}}
                    </div>
                </div>
                <div class="col-4">
                    <label>Numero de telephone</label>
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                        {{ form_widget(form.telephone)}}
                        {{ form_errors(form.telephone)}}
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">
                    <label>Selectionner un Infirmier</label>
                    {{ form_widget(form.infirmier)}}
                    {{ form_errors(form.infirmier)}}
                </div>
                <div class="col-4">
                    <label>Adresse</label>
                    {{ form_widget(form.adresse)}}
                    {{ form_errors(form.adresse)}}
                </div>
                <div class="col-4">
                    <label>Inserer votre image</label>
                    {{ form_widget(form.image)}}
                    {{ form_errors(form.image)}}
                        
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">
                        <label>Date de Naissance</label>   
                        {{ form_widget(form.date_de_naissance)}}
                        {{ form_errors(form.date_de_naissance)}}
                </div>
                <div class="col-4">
                        <label>Genre</label>   
                <!-- radio -->
                      <div class="form-group">
                        {{ form_widget(form.genre)}}
                        {{ form_errors(form.genre)}}
                      </div>
                </div>
                <div class="col-4">
                    <button class="btn btn-success col-4 mx-2 mt-3">
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>
            </div>

        </div>
              <!-- /.card-body -->
{{ form_end(form) }}
