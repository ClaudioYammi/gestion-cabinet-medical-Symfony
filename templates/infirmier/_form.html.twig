{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
<div class="card-body">
    <div class="row mb-5">
        <div class="col-4">
            <label>Nom</label>   
            <div class="input-group date" id="reservationdate" data-target-input="nearest">
                {{ form_widget(form.nom)}}
                {{ form_errors(form.nom)}}
            </div>
        </div>
        <div class="col-4">
            <label>Prenom</label>
            <div class="input-group date" id="reservationdate" data-target-input="nearest">
                {{ form_widget(form.prenom)}}
                {{ form_errors(form.prenom)}}
            </div>
        </div>
        <div class="col-4">
            <label>Téléphone</label>
           <div class="input-group date" id="reservationdate" data-target-input="nearest" pattern="\d{3} \d{2} \d{2} \d{2}" required>
            {{ form_widget(form.telephone)}}
            {{ form_errors(form.telephone) }}
        </div>
    </div>
    <div class="row mb-5">
        <button class="btn  btn-success  mx-2 mt-3">{{ button_label|default('Enregistrer') }}</button>
    </div>
</div>
{{ form_end(form) }}